{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://chirpstack-provisioning.schemas/device_profile.json",
  "title": "ChirpStack Device Profile",
  "description": "Schema for provisioning a ChirpStack device profile",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100,
      "description": "Device profile name"
    },
    "description": {
      "type": "string",
      "maxLength": 500,
      "description": "Optional description of the device profile"
    },
    "tenant_id": {
      "type": "string",
      "format": "uuid",
      "description": "UUID of the tenant this device profile belongs to"
    },
    "tenant_name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100,
      "description": "Name of the tenant (used for lookup if tenant_id not provided)"
    },
    "region": {
      "type": "string",
      "enum": ["EU868", "US915", "CN779", "EU433", "AU915", "CN470", "AS923", "AS923-2", "AS923-3", "AS923-4", "KR920", "IN865", "RU864"],
      "description": "LoRaWAN region"
    },
    "mac_version": {
      "type": "string",
      "enum": ["1.0.0", "1.0.1", "1.0.2", "1.0.3", "1.0.4", "1.1.0"],
      "description": "LoRaWAN MAC version",
      "default": "1.0.3"
    },
    "reg_params_revision": {
      "type": "string",
      "enum": ["A", "B", "RP002-1.0.0", "RP002-1.0.1", "RP002-1.0.2", "RP002-1.0.3"],
      "description": "Regional parameters revision",
      "default": "RP002-1.0.3"
    },
    "adr_algorithm_id": {
      "type": "string",
      "description": "ADR algorithm identifier",
      "default": "default"
    },
    "payload_codec_runtime": {
      "type": "string",
      "enum": ["NONE", "CAYENNE_LPP", "JS"],
      "description": "Payload codec runtime",
      "default": "NONE"
    },
    "payload_codec_script": {
      "type": "string",
      "description": "JavaScript payload codec script"
    },
    "uplink_interval": {
      "type": "integer",
      "minimum": 0,
      "description": "Expected uplink interval in seconds (0 = disabled)",
      "default": 0
    },
    "device_status_req_interval": {
      "type": "integer",
      "minimum": 0,
      "description": "Device status request interval (0 = disabled)",
      "default": 0
    },
    "flush_queue_on_activate": {
      "type": "boolean",
      "description": "Flush queue on device activation",
      "default": false
    },
    "supports_otaa": {
      "type": "boolean",
      "description": "Device supports OTAA activation",
      "default": true
    },
    "supports_class_b": {
      "type": "boolean",
      "description": "Device supports Class B",
      "default": false
    },
    "supports_class_c": {
      "type": "boolean",
      "description": "Device supports Class C",
      "default": false
    },
    "class_b_timeout": {
      "type": "integer",
      "minimum": 0,
      "description": "Class B timeout in seconds",
      "default": 0
    },
    "class_c_timeout": {
      "type": "integer",
      "minimum": 0,
      "description": "Class C timeout in seconds",
      "default": 0
    },
    "tags": {
      "type": "object",
      "description": "Device profile tags for organization and filtering",
      "additionalProperties": {
        "type": "string"
      }
    }
  },
  "required": ["name", "region"],
  "anyOf": [
    { "required": ["tenant_id"] },
    { "required": ["tenant_name"] }
  ]
}