{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$ref": "#/definitions/Gateway",
    "definitions": {
        "Gateway": {
            "properties": {
                "gateway_id": {
                    "type": "string",
                    "description": "Gateway ID (EUI64)."
                },
                "name": {
                    "type": "string",
                    "description": "Name."
                },
                "description": {
                    "type": "string",
                    "description": "Description."
                },
                "location": {
                    "$ref": "#/definitions/common.Location",
                    "additionalProperties": true,
                    "description": "Gateway location."
                },
                "tenant_id": {
                    "type": "string",
                    "description": "Tenant ID (UUID)."
                },
                "tags": {
                    "additionalProperties": {
                        "type": "string"
                    },
                    "type": "object",
                    "description": "Tags."
                },
                "metadata": {
                    "additionalProperties": {
                        "type": "string"
                    },
                    "type": "object",
                    "description": "Metadata (provided by the gateway)."
                },
                "stats_interval": {
                    "type": "integer",
                    "description": "Stats interval (seconds). This defines the expected interval in which the gateway sends its statistics."
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Gateway"
        },
        "common.Location": {
            "properties": {
                "latitude": {
                    "type": "number",
                    "description": "Latitude."
                },
                "longitude": {
                    "type": "number",
                    "description": "Longitude."
                },
                "altitude": {
                    "type": "number",
                    "description": "Altitude."
                },
                "source": {
                    "enum": [
                        "UNKNOWN",
                        0,
                        "GPS",
                        1,
                        "CONFIG",
                        2,
                        "GEO_RESOLVER_TDOA",
                        3,
                        "GEO_RESOLVER_RSSI",
                        4,
                        "GEO_RESOLVER_GNSS",
                        5,
                        "GEO_RESOLVER_WIFI",
                        6
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Location Source"
                },
                "accuracy": {
                    "type": "number",
                    "description": "Accuracy."
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Location"
        }
    }
}